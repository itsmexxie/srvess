generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = "file:../../database.sqlite"
}

model User {
    id    String @id
    votes Vote[]
}

model Guild {
    id              String          @id
    timezone        String          @default("UTC")
    votingChannelId String          @default("0")
    votingSessions  VotingSession[]
}

model VotingSession {
    id                 String         @id
    number             Int
    type               Int
    name               String
    options            VotingOption[]
    votes              Vote[]
    closed             Boolean        @default(false)
    createdAtTimestamp String
    endsAtTimestamp    String
    guild              Guild          @relation(fields: [guildId], references: [id])
    guildId            String
}

model VotingOption {
    id              String        @id
    index           Int
    content         String
    votes           Vote[]
    votingSession   VotingSession @relation(fields: [votingSessionId], references: [id], onDelete: Cascade)
    votingSessionId String
}

model Vote {
    user            User          @relation(fields: [userId], references: [id])
    userId          String
    votingSession   VotingSession @relation(fields: [votingSessionId], references: [id])
    votingSessionId String
    votingOption    VotingOption  @relation(fields: [votingOptionId], references: [id])
    votingOptionId  String

    @@unique([userId, votingSessionId])
}
